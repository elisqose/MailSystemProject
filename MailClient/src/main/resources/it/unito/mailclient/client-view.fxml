<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="it.unito.mailclient.controller.ClientController"
           prefHeight="600.0" prefWidth="800.0">

    <VBox fx:id="loginPane" alignment="CENTER" spacing="20.0" style="-fx-background-color: #f4f4f4;">
        <Label text="Mail Client Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER" spacing="10">
            <Label text="Email Address:"/>
            <TextField fx:id="emailField" promptText="user1@mail.com" prefWidth="250"/>
        </HBox>

        <Button text="Accedi" onAction="#onLoginButtonClick" defaultButton="true"
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label fx:id="errorLabel" textFill="RED"/>
    </VBox>

    <BorderPane fx:id="inboxPane" visible="false">

        <top>
            <HBox spacing="10" style="-fx-background-color: #ddd; -fx-padding: 10;">
                <Label fx:id="currentUserLabel" style="-fx-font-weight: bold;" text="User: ..."/>
                <Region HBox.hgrow="ALWAYS"/> <Button text="Scrivi" onAction="#onWriteButtonClick"/>
                <Button text="Rispondi" onAction="#onReplyButtonClick"/>
                <Button text="Inoltra" onAction="#onForwardButtonClick"/>
                <Button text="Cancella" onAction="#onDeleteButtonClick" style="-fx-text-fill: red;"/>
            </HBox>
        </top>

        <center>
            <SplitPane dividerPositions="0.4" orientation="VERTICAL">
                <items>
                    <TableView fx:id="emailTable">
                        <columns>
                            <TableColumn fx:id="colFrom" text="Mittente" prefWidth="150"/>
                            <TableColumn fx:id="colSubject" text="Oggetto" prefWidth="300"/>
                            <TableColumn fx:id="colDate" text="Data" prefWidth="150"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>

                    <VBox spacing="5" style="-fx-padding: 10;">
                        <Label text="Contenuto Messaggio:" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="messageArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
                    </VBox>
                </items>
            </SplitPane>
        </center>

        <bottom>
            <HBox style="-fx-padding: 5; -fx-border-color: #ccc; -fx-border-width: 1 0 0 0;">
                <Label fx:id="statusLabel" text="Pronto."/>
            </HBox>
        </bottom>

    </BorderPane>

</StackPane>